    <update id="updatePermission" parameterType="uz.furor.template.db.beans.admin.PermissionBean"
            statementType="PREPARED" keyProperty="id" keyColumn="id" useGeneratedKeys="true">
        update permissions
        set shortname        = #{shortname},
            name             = #{name},
            enabled          = #{enabled}::bool,
            order_id         = #{order_id}::int4,
            description      = #{description},
            updated_users_id = #{updated_users_id}::int4,
            updated_date     = current_timestamp
        where id = #{id}::int4
    </update>

    <delete id="deletePermission" parameterType="map" statementType="PREPARED">
        delete
        from permissions
        where id = #{id}::int4
    </delete>

    <select id="insertPermission" parameterType="uz.furor.template.db.beans.admin.PermissionBean"
            resultType="uz.furor.template.db.beans.admin.PermissionBean"
            affectData="true" flushCache="true">
        insert into permissions (id,
                                 shortname,
                                 name,
                                 enabled,
                                 order_id,
                                 description,
                                 created_users_id,
                                 created_date,
                                 updated_users_id,
                                 updated_date)
        VALUES (nextval('permissions_seq'),
                #{shortname},
                #{name},
                #{enabled}::bool,
                #{order_id}::int4,
                #{description},
                #{created_users_id}::int4,
                current_timestamp,
                #{updated_users_id}::int4,
                current_timestamp)
        returning id, shortname, name,enabled,order_id, description, created_users_id, created_date, updated_users_id, updated_date
    </select>

